<div class="container-fluid vh-100 chat-container d-none" style="padding-bottom:150px;">
    <div class="row h-100">
        <!-- Sol panel: Sohbet listesi -->
        <div class="col-4 bg-light p-0 border-end chat-list">
            <div class="p-3 bg-success text-white  gap-2 d-flex flex-column" style="height:100px">
                <div class="d-flex"style="justify-content:space-between;">
                    <h5>My Chats</h5>
                    <div class="groups-list">
                        <button class="new-group-btn">
                            <i class="fa-solid fa-plus" style="color:#f0f2f5"></i>
                        </button>
                        <button class="new-group-btn">
                            <i class="fa-solid fa-user-group" style="color:#f0f2f5"></i>
                        </button>
                    </div>      
                </div>
                <div class="d-flex search-box">
                    <button>
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <input  type="text"/>
                </div>
            </div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action users d-flex align-items-center">
                    <img src="~/media/pp.jpeg" alt="Person 1" class="rounded-circle me-2" style="width: 50px; height: 50px;">
                    <div class="d-flex flex-column">
                        <span class="fw-bold info-username">Person 1</span>
                        <small class="text-muted">Last seen: Today at 14:35</small>
                    </div>
                </a>

                <div id="_clients"></div>
            </div>
        </div>

        <!-- Sağ panel: Sohbet penceresi -->
        <div class="col-8 p-0 chat-window">
            <div class="d-flex align-items-center p-3 bg-success text-white border-bottom gap-4" style="height:100px">
                <div style="width:8%">
                    <img src="~/media/pp.jpeg" alt="Person 5" class="rounded-circle me-2 w-100">
                </div>
                <div>
                    <h5 class="mb-0 ">Person 1</h5>
                    <small>Last seen at 14:35</small>
                </div>
            </div>
            <div class="chat-messages p-3" id="chat-messages">
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-start mb-2">
                        <div class="message bg-light p-2 rounded">Hello!</div>
                    </div>
                    <div class="d-flex justify-content-end mb-2">
                        <div class="message bg-primary text-white p-2 rounded">Hi, how are you?</div>
                    </div>
                    <div class="d-flex justify-content-start mb-2">
                        <div class="message bg-light p-2 rounded">I'm good, thanks!</div>
                    </div>
                </div>
            </div>
            <div class="input-group p-3 border-top">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-paperclip"></i> <!-- Font Awesome Dosya Ekleme İkonu -->
                </button>
                <input  class="form-control" id="messageArea" placeholder="Type a message...">
                <button class="btn btn-success" id="sendBtn" type="button">Send</button>
            </div>
        </div>
    </div>
</div>

<div class="accepting-area">
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
        Sohhbete başla
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Kişisel Veri İzni</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex gap-2">
                        <input type="checkbox" id="accepting" />
                        <p style="margin-bottom:0px">Kişisel bilgilerimin işlenmesine izin veriyorum.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="btnLogin">Kabul et</button>
                </div>
            </div>
        </div>
    </div>
</div>


